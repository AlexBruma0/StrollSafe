<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/good_morning_img" />


    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_label_Stroll_Safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_StrollSafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:text="Stroll "
                android:textColor="#ffffff"
                android:textSize="42sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_label_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:text="Safe"
                android:textColor="#ffffff"
                android:textSize="42sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#deff00" />

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <LinearLayout
            android:id="@+id/ll_sign_up_mode_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_new_PWD"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/buttonshapewhitebg"
                android:fontFamily="@font/calibri"
                android:text="New\nPWD"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_new_caregiver"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/buttonshapewhitebg"
                android:fontFamily="@font/calibri"
                android:text="New\nCaregiver"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/button_toLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Already have an account? Log in here!"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ffdddd"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>
